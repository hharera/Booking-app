<resources>

    <style name="AppStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_600</item>
        <item name="colorOnPrimary">@color/grey_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_600</item>
        <item name="colorOnSecondary">@color/grey_100</item>

        <item name="android:windowBackground">@color/grey_100</item>
        <item name="android:statusBarColor">@color/grey_100</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="FragmentStyle">
        <item name="android:background">@color/grey_100</item>
    </style>

    <style name="ActivityStyle" parent="AppStyle">
        <item name="android:background">@color/grey_100</item>
    </style>

    <style name="CardViewStyle" parent="AppStyle">
        <item name="android:background">@color/white</item>
    </style>


    <style name="Main_Style">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_600</item>
        <item name="errorTextColor">@color/blue_600</item>
        <item name="errorIconDrawable">@drawable/error</item>
        <item name="background">@color/grey_100</item>
        <item name="android:background">@color/grey_100</item>
        <item name="android:statusBarColor">@color/blue_600</item>
    </style>

    <style name="Main_Style.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBarLayoutStyle" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/white</item>
    </style>

    <style name="OutlinedInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="iconSize">24dp</item>
        <item name="checkedIconSize">24dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="chipIconSize">24dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:radius">8dp</item>
        <item name="android:isIndicator">false</item>
        <item name="startIconTint">#99A5B7</item>
        <item name="android:background">@drawable/background_input_layout</item>
        <item name="android:textColor">@color/grey_300</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>


    <style name="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnPrimary">#FF9800</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#000</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#F1F4F8</item>
        <item name="colorControlActivated">#E1C300</item>
    </style>

    <style name="MainImageViewStyle">

    </style>

    <style name="MainInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="iconSize">24dp</item>
        <item name="checkedIconSize">24dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="chipIconSize">24dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:isIndicator">false</item>
        <item name="borderWidth">1dp</item>
        <item name="startIconTint">#99A5B7</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColor">@color/grey_300</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxStrokeErrorColor">@color/red_600</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/background_input_focus</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="iconSize">24dp</item>
        <item name="checkedIconSize">24dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="chipIconSize">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:fontFamily">@font/sf</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="checkedIconSize">24dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="chipIconSize">24dp</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="background">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <!--        TODO change colors organization-->
        <item name="iconSize">24dp</item>
        <item name="checkedIconSize">24dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="chipIconSize">24dp</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="checkedIconSize">24dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="chipIconSize">24dp</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="background">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="button_number" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/background_button_number</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="color">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#303030</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/sf</item>
    </style>

    <style name="text_number" parent="Widget.MaterialComponents.Button">
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="checkedIconSize">24dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="chipIconSize">24dp</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="background">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/mtrl_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_padding_right</item>
        <item name="strokeColor">@color/mtrl_btn_stroke_color_selector</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
    </style>
</resources>